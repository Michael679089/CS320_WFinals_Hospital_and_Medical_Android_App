<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@drawable/bg_schedule_cards"
    android:backgroundTint="@color/mediumGray"
    android:elevation="2dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="30dp"
    android:paddingTop="20dp"
    android:paddingRight="30dp"
    android:paddingBottom="20dp">

    <!-- Prescription Icon -->
    <ImageView
        android:id="@+id/imageDoctor"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_marginEnd="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_prescription" />


    <!-- Text Section -->
    <LinearLayout
        android:id="@+id/scheduleTextContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/datePrescribed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="0dp"
            android:text="March 5, 2025"
            android:textColor="#4D4D4D"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:lineSpacingExtra="0dp"
            android:text="Prescribed by:"
            android:textColor="@color/lightGray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/doctorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="0dp"
            android:text="Juan Dela Cruz"
            android:textColor="@color/darkGray"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- View Icon -->
    <ImageView
        android:id="@+id/viewPrescriptionBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="View"
        android:src="@drawable/icon_caret_right"
        app:tint="@color/darkGray" />
</LinearLayout>
